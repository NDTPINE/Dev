@page "{id:long?}"
@model Webapp.Pages.EditorModel
@{ Layout = "null";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-primary text-white text-center p-2 m-2">Editor</div>
    <div class="m-2">
        <table class="table table-bordered table-sm table table-striped">
            <tbody>
                <tr for="Product.Name"/>
                <tr for="Product.Price" format="c" />
            </tbody>
        </table>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label >Price</label>
                <input name="price" class="form-control" value="@Model.Product.Price"/>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</body>
</html> 
